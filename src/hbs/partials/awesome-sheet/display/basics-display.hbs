<section id="display-basics" class="l-display l-display-first js-display is-hidden">
  <button class="m-display-self-link button button-link js-display-self-link" data-self-link="#display-basics"></button>
  <button class="m-display-edit-link button button-link button-small button-icon u-inline-with-input js-display-edit-link" data-edit-link="#basics"><span class="icon-edit"></span></button>
  <div class="m-display-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
            <h1 class="m-display-title">Basics</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">

          <div class="m-display-body">
            <h2 class="js-display-block" data-display-type="text-snippet" data-display="basics.name">
              <span class="js-display-block-target"></span>
            </h2>
            <p class="js-display-block" data-display-type="text-snippet" data-display="basics.gender,basics.race,basics.class,basics.level">
              <span class="js-display-block-target"></span>
            </p>
            <p class="js-display-block" data-display-type="text-snippet" data-display="basics.xp,basics.size,basics.height,basics.weight,basics.age,basics.hero_points,basics.luck_points" data-display-suffix="xp,, tall,, years old, hero points, luck points">
              <span class="js-display-block-target"></span>
            </p>
          </div>




        </div>
      </div>
    </div>
  </div>
  <div class="m-display-wrapper-dark">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <p class="m-display-body-title">Quick Stats</p>
          <div class="m-display-head">

            <div class="m-display-head-item">
              <p class="m-display-head-item-title">Speed</p>
              <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="basics.speed">
                <span class="js-display-block-target"></span>
              </h2>
            </div>

            <div class="m-display-head-item">
              <p class="m-display-head-item-title">Perception</p>
              <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="skills.perception.current">
                <span class="js-display-block-target"></span>
              </h2>
            </div>

            <div class="m-display-head-item">
              <p class="m-display-head-item-title">Initiative</p>
              <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="basics.initiative">
                <span class="js-display-block-target"></span>
              </h2>
            </div>

            <div class="m-display-head-item">
              <p class="m-display-head-item-title">AC</p>
              <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="defense.ac.current">
                <span class="js-display-block-target"></span>
              </h2>
            </div>

            <div class="m-display-head-item m-display-head-item-highlight">
              <p class="m-display-head-item-title">HP</p>
              <h2 class="m-display-head-item-value">
                <div class="m-display-head-hitpoints">
                  <span class="m-display-head-hitpoints-current js-display-block" data-display-type="text-snippet" data-display="defense.hp.current">
                    <span class="js-display-block-target"></span>
                  </span>
                  <span class="m-display-head-hitpoints-total js-display-block" data-display-type="text-snippet" data-display="defense.hp.total">
                    <span class="js-display-block-target"></span>
                  </span>
                </div>
              </h2>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
