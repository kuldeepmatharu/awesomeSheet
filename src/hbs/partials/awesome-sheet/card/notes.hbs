<section id="notes" class="l-section js-section js-section-notes">
  <div class="m-card">
    <div class="m-card-head">
      <div class="m-card-controls button-group">
        <button class="m-card-title button button-tertiary button-medium button-icon js-card-title" tabindex="1">
          <span class="icon-file"></span>
          <span class="button-text">Notes</span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-minimise" tabindex="1">
          <span class="icon-unfold-less js-card-minimise-icon"></span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-toggle" tabindex="1">
          <span class="icon-reader js-card-toggle-icon"></span>
        </button>
      </div>
      <div class="m-card-tabs js-card-tabs">
        <div class="m-tab-group js-tab-group">
          <button class="m-tab-arrow button button-tertiary button-icon js-tab-arrow" data-tab-arrow-options="tabGroup:notes,action:left" tabindex="1"><span class="icon-chevron-left"></span></button>
          <div class="m-tab-row js-tab-row">
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:notes,tab:character,target:js-tab-panel-notes-character" tabindex="1"><span class="m-tab-text">Character</span></button>
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:notes,tab:story,target:js-tab-panel-notes-story" tabindex="1"><span class="m-tab-text">Story</span></button>
            <span class="m-tab-indicator"></span>
          </div>
          <button class="m-tab-arrow button button-tertiary button-icon js-tab-arrow" data-tab-arrow-options="tabGroup:notes,action:right" tabindex="1"><span class="icon-chevron-right"></span></button>
        </div>
      </div>
    </div>
    <div class="m-card-body">
      <div class="js-edit">
        {{> notes-edit }}
      </div>
      <div class="js-display is-hidden">
        {{> notes-display }}
      </div>
    </div>
  </div>
</section>
