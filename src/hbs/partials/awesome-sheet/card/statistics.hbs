<section id="statistics" class="l-section js-section">
  <div class="m-card">
    <div class="m-card-head">
      <h1 class="m-card-title">Statistics</h1>
      <button class="m-card-link-self button button-link js-display-self-link"></button>
      <button class="m-card-link-toggle button button-link button-small button-icon js-display-edit-link"><span class="icon-reader-mode"></span></button>
    </div>
    <div class="m-card-body">
      <div class="js-edit">
        {{> statistics-edit }}
      </div>
      <div class="js-display is-hidden">
        {{> statistics-display }}
      </div>
    </div>
  </div>
</section>
