<section id="spells" class="l-section js-section js-section-spells" data-display-mode="false">
  <div class="m-card">
    <div class="m-card-head">
      <div class="m-card-head-controls button-group">
        <button class="m-card-title button button-tertiary button-medium button-icon js-card-title" tabindex="1">
          <span class="icon-whatshot"></span>
          <span class="button-text">Spells</span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-minimise" tabindex="1">
          <span class="icon-unfold-less js-card-minimise-icon"></span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-toggle" tabindex="1">
          <span class="icon-reader-mode js-card-toggle-icon"></span>
        </button>
      </div>
    </div>
    <div class="m-tab-group js-tab-group">
      <button class="m-tab-item js-tab-item is-active" data-tab-target="js-tab-panel-spell-stats"><span class="m-tab-text">Spell Stats</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-0"><span class="m-tab-text">Level 0</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-1"><span class="m-tab-text">Level 1</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-2"><span class="m-tab-text">Level 2</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-3"><span class="m-tab-text">Level 3</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-4"><span class="m-tab-text">Level 4</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-5"><span class="m-tab-text">Level 5</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-6"><span class="m-tab-text">Level 6</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-7"><span class="m-tab-text">Level 7</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-8"><span class="m-tab-text">Level 8</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-9"><span class="m-tab-text">Level 9</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-level-10"><span class="m-tab-text">Level 10</span></button>
    </div>
    <div class="m-card-body">
      <div class="js-edit">
        {{> spells-edit }}
      </div>
      <div class="js-display is-hidden">
        {{> spells-display }}
      </div>
    </div>
  </div>
</section>
