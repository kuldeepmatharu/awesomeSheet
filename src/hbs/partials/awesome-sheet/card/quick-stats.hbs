<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p class="m-display-body-title">Quick Stats</p>
      <div class="m-display-head">

        <div class="m-display-head-item">
          <p class="m-display-head-item-title">Speed</p>
          <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="basics.speed">
            <span class="js-display-block-target"></span>
          </h2>
        </div>

        <div class="m-display-head-item">
          <p class="m-display-head-item-title">Perception</p>
          <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="skills.perception.current">
            <span class="js-display-block-target"></span>
          </h2>
        </div>

        <div class="m-display-head-item">
          <p class="m-display-head-item-title">Initiative</p>
          <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="basics.initiative">
            <span class="js-display-block-target"></span>
          </h2>
        </div>

        <div class="m-display-head-item">
          <p class="m-display-head-item-title">AC</p>
          <h2 class="m-display-head-item-value js-display-block" data-display-type="text-snippet" data-display="defense.ac.current">
            <span class="js-display-block-target"></span>
          </h2>
        </div>

        <div class="m-display-head-item m-display-head-item-highlight">
          <p class="m-display-head-item-title">HP</p>
